<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/app_margem_vertical"
    android:paddingLeft="@dimen/app_margem_horizontal"
    android:paddingRight="@dimen/app_margem_horizontal"
    android:paddingTop="@dimen/app_margem_vertical"
    android:orientation="vertical"
    tools:context="com.example.lorran.contatos.CadastroActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="122dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_weight="0.03" />

    <TextView
        android:text="Nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nomeLabel" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/nome_exemplo"
        android:ems="10"
        android:id="@+id/cadastro_nomeImput" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/email_exemplo"
        android:id="@+id/cadastro_emailImput" />

    <TextView
        android:text="EndereÃ§o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enderecoLabel" />

    <EditText
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/endereco_exemplo"
        android:ems="10"
        android:id="@+id/cadastro_enderecoImput" />

    <TextView
        android:text="Senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/senhaLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastro_senhaImput" />

    <TextView
        android:text="Confirme sua senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmaSenhaLabel" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cadastro_confirmaSenhaImput" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18">

        <Button
            android:text="Cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cadastro_btnCancelar"
            android:layout_weight="1" />

        <Button
            android:text="Cadastrar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cadastro_btnCadastrar"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>
